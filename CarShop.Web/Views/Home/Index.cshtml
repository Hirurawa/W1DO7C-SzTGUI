@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to my Car Handler App</h1>

    @* This demo should be remowed from Homework *@
    <div id="basic-demo-app">
        {{ message }}
        @*<input type="text" v-bind:value="op1" /> + <input type="text" v-bind:value="op2" /> = {{ result }}*@
        <input type="number" v-model:value="op1" /> + <input type="number" v-model:value="op2" /> = {{ result }} (with computed prop: {{ resultAsComputedProp }})
        <button class="btn btn-primary" v-on:click="calculateResult">Calculate</button>
    </div>

    <div id="car-handler-app">
        <div class="button-container pb-3" style="text-align:center;">
            <button class="btn btn-secondary" v-on:click="loadCars">Load</button>
            <button class="btn btn-success" v-on:click="createCar">Create</button>
            <button v-if="enabledBackToList" class="btn btn-secondary" v-on:click="backToList">Back to list</button>
        </div>
        <div id="content" style="display: flex; justify-content: center; flex-wrap: wrap;">
            <div v-if="errors.length > 0">
                <span v-for="msg in errors" style="color:red;font-weight:bold;">{{ msg }}</span>
            </div>
            <div v-if="messages.length > 0">
                <span v-for="msg in messages" style="color:green;">{{ msg }}</span>
            </div>
            <template v-if="operationMode == 0">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Brand Id</th>
                            <th>Model</th>
                            <th>Price</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr v-for="car in cars">
                            <td>{{ car.id }}</td>
                            <td>{{ car.brandId }}</td>
                            <td>{{ car.model }}</td>
                            <td>{{ car.price }}</td>
                            <td style="width:20%;text-align:right;">
                                <button class="btn btn-info" v-on:click="viewCar(car)">View</button>
                                <button class="btn btn-warning" v-on:click="editCar(car)">Edit</button>
                                <button class="btn btn-danger" v-on:click="deleteCar(car)">Delete</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </template>
            <template v-else-if="operationMode == 1">
                <view-component v-bind:car="selectedCar"></view-component>
            </template>
            <template v-else-if="operationMode == 2">
                <!--Create case-->
                <editor-component v-on:saved="savedSuccessfully"
                                  v-on:cancelled="operationCancelled"></editor-component>
            </template>
            <template v-else>
                <!--Edit case-->
                <editor-component v-bind:car="selectedCar"
                                  v-on:saved="savedSuccessfully"
                                  v-on:cancelled="operationCancelled"></editor-component>
            </template>
        </div>
    </div>
</div>

<script src="~/lib/vue/dist/vue.js"></script>
<script src="~/lib/axios/dist/axios.js"></script>

<script type="text/javascript">
    var app = new Vue({
        el: '#basic-demo-app',
        data: {
            message: 'It works!',
            op1: 11,
            op2: 2,
            result: 0,
            selectedOperand: 0
        },
        computed: {
            resultAsComputedProp() {
                return Number.parseInt(this.op1) + Number.parseInt(this.op2);
            }
        },
        methods: {
            calculateResult() {
                //this.result = Number.parseInt(this.op1) + Number.parseInt(this.op2);
                this.result = this.resultAsComputedProp;
            }
        },
        watch: {
            op1(oldVal, newVal) {
                this.calculateResult();
            },
            op2(newVal) {
                this.calculateResult();
            }
        }
    });

    const axi = axios.create({
        baseURL: 'http://localhost:24577/api/car/'
    });

    var carHandlerApp = new Vue({
        el: '#car-handler-app',
        data: {
            cars: [],
            selectedCar: {},
            operationMode: 0, // 0 listing, 1 view, 2 create, 3 edit
            messages: [],
            errors: []
        },
        computed: {
            enabledBackToList() {
                return this.operationMode != 0;
            }
        },
        methods: {
            loadCars() {
                axi.get('GetAll').then((response) => {
                    this.cars = response.data;
                    console.log(response.data);
                }).catch((err) => {
                    console.log(err);
                });
            },
            viewCar: function (car) {
                this.selectedCar = car;
                this.operationMode = 1;
            },
            createCar: function () {
                this.operationMode = 2;
            },
            editCar: function (car) {
                this.selectedCar = car;
                this.operationMode = 3;
            },
            deleteCar: function (car) {
                axi.delete('Delete/' + car.id).then((response) => { // Request body should not works there
                    if (response.data.isSuccess) {
                        this.messages.push("Car deleted successfully");
                        this.loadCars();

                        setTimeout(() => { this.messages = []; }, 3000);
                    } else {
                        this.erros = response.data.messages;
                        setTimeout(() => { this.errors = []; }, 3000);
                    }
                }).catch((err) => {
                    this.errors.push('Error occured during delete.');
                    setTimeout(() => { this.errors = []; }, 3000);
                });
            },
            backToList: function () {
                this.selectedCar = {};
                this.operationMode = 0;
            },
            savedSuccessfully(msg) {
                this.selectedCar = {};
                this.messages.push(msg);
                console.log("saved");
                this.loadCars();
                this.operationMode = 0;

                setTimeout(() => { this.messages = []; }, 3000);
            },
            operationCancelled() {
                this.selectedCar = {};
                this.messages.push("The operation has been cancelled.");

                console.warn("cancelled");
                this.operationMode = 0;
                setTimeout(() => { this.messages = []; }, 3000);
            }
        }
    });

    Vue.component('view-component', {
        props: ['car'],
        template: '#view-template'
    });

    Vue.component('editor-component', {
        props: ['car'],
        template: '#editor-template',
        data: function () {
            return {
                innerCar: {},
                brands: [],
                isEdit: false,
                errors: []
            };
        },
        methods: {
            save() {
                if (this.isEdit) {
                    axi.put('Update', this.innerCar).then(this.handleSuccess).catch((err) => {
                        console.log(err);
                        this.handleError(['Error occured during processing.']);
                    });
                }
                else {
                    axi.post('Create', this.innerCar).then(this.handleSuccess).catch((err) => {
                        console.log(err);
                        this.handleError(['Error occured during processing.']);
                    });
                }
            },
            cancel() {
                this.$emit('cancelled');
            },
            handleSuccess(response) {
                if (response.data.isSuccess) {
                    this.$emit('saved', this.isEdit ? "Car edited successfully" : "Car created successfully");
                } else {
                    this.handleError(response.data.messages);
                }
            },
            handleError(errorMessages) {
                this.errors = errorMessages;

                setTimeout(() => { this.errors = []; }, 3000); // Auto error clean after 3sec
            }
        },
        created: function () {
            if (this.car != undefined) {
                this.isEdit = true;

                // Copy
                this.innerCar = {
                    id: this.car.id,
                    brandId: this.car.brandId,
                    model: this.car.model,
                    price: this.car.price
                };
            } else {
                // Create new
                this.innerCar = {
                    id: 0,
                    brandId: 0,
                    model: '',
                    price: 0
                };
            }

            axi.get("GetAllBrands").then((response) => {
                this.brands = response.data;
            }).catch((err) => {
                console.log(err);
            });
        }
    });
</script>

<script type="text/x-template" id="view-template">
    <div style="text-align:left" class="car-view-container">
        <div>
            <strong>Id</strong><br />
            <label>{{ car.id }}</label>
        </div>
        <div>
            <strong>Brand Id</strong><br />
            <label>{{ car.brandId }}</label>
        </div>
        <div>
            <strong>Model</strong><br />
            <label>{{ car.model }}</label>
        </div>
        <div>
            <strong>Price</strong><br />
            <label>{{ car.price }}</label>
        </div>
    </div>
</script>

<script type="text/x-template" id="editor-template">
    <div style="text-align:left" class="car-view-container">
        <div v-if="errors.length > 0">
            <span v-for="msg in errors" style="color:red;font-weight:bold;">{{ msg }}</span>
        </div>
        <div>
            <strong>Brand</strong><br />
            <select id="brand-selector" v-model="innerCar.brandId" class="form-control">
                <option v-for="brand in brands" v-bind:value="brand.id">{{ brand.name }}</option>
            </select>
        </div>
        <div>
            <strong>Model</strong><br />
            <input type="text" v-model="innerCar.model" class="form-control" />
        </div>
        <div>
            <strong>Price</strong><br />
            <input type="number" v-model.number="innerCar.price" class="form-control" />
        </div>
        <div class="float-right pt-3">
            <button class="btn btn-primary" v-on:click="save">Mentés</button>
            <button class="btn btn-secondary" v-on:click="cancel">Mégsem</button>
        </div>
    </div>
</script>
